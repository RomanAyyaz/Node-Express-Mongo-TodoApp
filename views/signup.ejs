<!DOCTYPE html>
<html lang="en">
<%- include("partials/header") %>
    <title>Signup</title>

    <body>
        <!-- Navbar code -->
        <%- include("partials/navbar") %>
            <!-- User code -->
            <div class="container">
                <form action="/user/signup" method="post">
                    <div class="mb-3">
                        <div class="mb-3">
                            <label for=" floatingInput" class="form-label">Full Name</label>
                            <input type="text" name="fullname" class="form-control" id="floatingInput">

                        </div>
                        <label for="floatingInput" class="form-label">Email address</label>
                        <input type="email" name="email" class="form-control" id="floatingInput"
                            aria-describedby="emailHelp">
                        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="mb-3">
                        <label for="floatingInput" class="form-label">Password</label>
                        <input type="password" name="password" class="form-control" id="floatingInput">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <!-- Script -->
            <%- include("partials/script") %>
    </body>

</html>